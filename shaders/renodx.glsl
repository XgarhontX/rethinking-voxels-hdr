  bvec3 cutoff = lessThan(x, vec3(0.0031308));
  vec3 higher = vec3(1.055) * pow(x, vec3(1.0 / 2.4)) - vec3(0.055);
  vec3 lower = x * vec3(12.92);

  return mix(higher, lower, cutoff);
}

