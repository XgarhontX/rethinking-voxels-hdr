//DICE
vec3 ExponentialRollOff(vec3 x, float rolloff_start, float output_max) { 
  vec3 rolloff_size = vec3(output_max - rolloff_start);
  vec3 overage = -max(vec3(0), x - rolloff_start);
  vec3 rolloff_value = vec3(1.0f) - exp(overage / rolloff_size);     
  vec3 new_overage = rolloff_size * rolloff_value + overage;
  return x + new_overage;
}
float ExponentialRollOff(float x, float rolloff_start, float output_max) { 
  float rolloff_size = output_max - rolloff_start;
  float overage = -max(0, x - rolloff_start);
  float rolloff_value = 1.0f - exp(overage / rolloff_size);
  float new_overage = rolloff_size * rolloff_value + overage;
  return x + new_overage;
}

vec3 ToneMapPass_ExponentialRollOff(vec3 color) {
  //setup
  float peak = (RENODX_PEAK_BRIGHTNESS / RENODX_GAME_BRIGHTNESS);
  float shoulder = (RENODX_SHOULDER_START / RENODX_GAME_BRIGHTNESS);

  //do
  color = WorkingColorSpace_Shaderpack_To_HDRTonemap(color);
  #if RENODX_SCALING == RENODX_SCALING_Y || RENODX_SCALING == RENODX_SCALING_MAXCHANNEL
    float y = YOrMaxChannelForHDRTonemap(color);
    if (y > 0) {
      float y1 = ExponentialRollOff(y, shoulder, peak);
      color *= y1/y;
    }
  #else
    vec3 s = Sign(color);
    color = abs(color);
    color = ExponentialRollOff(color, shoulder, peak);
    color *= s;
  #endif
  color = WorkingColorSpace_HDRTonemap_To_AfterTonemap(color);

  return color;
}


