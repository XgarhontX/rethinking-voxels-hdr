vec3 HermiteSplinePerChannelRolloff(vec3 x, float target_white /* = 1.f */, float max_white /* = 20.f */) {
  float target_white_log2 = log2(target_white);
  float max_white_log2 = log2(max_white);
  vec3 scaled = vec3(
      x.r == 0 ? 0 : exp2(HermiteSplineRolloff(log2(x.r), target_white_log2, max_white_log2)),
      x.g == 0 ? 0 : exp2(HermiteSplineRolloff(log2(x.g), target_white_log2, max_white_log2)),
      x.b == 0 ? 0 : exp2(HermiteSplineRolloff(log2(x.b), target_white_log2, max_white_log2))
      );
  return scaled;
}

