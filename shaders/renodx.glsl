//from RenoDX clshortfuse
float RenoDX_Contrast(float x, float contrast, float mid_gray) {
  return pow(max(0, x / mid_gray), contrast) * mid_gray;
}

float RenoDX_Shadows(float x, float shadows, float mid_gray) {
  float value;
  if (shadows > 1.f) {
    value = max(x, x * (1.f + (x * mid_gray / pow(x / mid_gray, shadows))));
  } else if (shadows < 1.f) {
    value = clamp(x * (1.f - (x * mid_gray / pow(x / mid_gray, 2.f - shadows))), 0.f , x);
  } else {
    value = x;
  }
  return value;
}
float RenoDX_Highlights(float x, float highlights, float mid_gray) {
  float value;
  if (highlights > 1.f) {
    value = max(x, mix(x, mid_gray * pow(x / mid_gray, highlights), x));
  } else if (highlights < 1.f) {
    value = min(x, x / (1.f + mid_gray * pow(x / mid_gray, 2.f - highlights) - x));
  } else {
    value = x;
  }
  return value;
}

vec3 ColorGradePass(vec3 color) {
  #if RENODX_COLORGRADE_ENABLED 
    float y = YFromCS(color, RENODX_WORKINGCS_SHADERPACK);
    if (y > 0) {
      float y1 = y;

      #if RENODX_COLORGRADE_CONTRAST != 100
        y1 = RenoDX_Contrast(y1, RENODX_COLORGRADE_CONTRAST / 100., RENODX_COLORGRADE_CONTRAST_MID);
      #endif

      #if RENODX_COLORGRADE_HIGHLIGHTS != 100
        y1 = RenoDX_Highlights(y1, RENODX_COLORGRADE_HIGHLIGHTS / 100., RENODX_COLORGRADE_HIGHLIGHTS_MID);
      #endif
      
      #if RENODX_COLORGRADE_SHADOWS != 100
        y1 = RenoDX_Shadows(y1, RENODX_COLORGRADE_SHADOWS / 100., RENODX_COLORGRADE_SHADOWS_MID);
      #endif

      color *= y1/y;
    }
  #endif

  #if RENODX_COLORGRADE_SATURATION != 100
    color = Luma_SetChrominance(color, RENODX_COLORGRADE_SATURATION / 100.);
  #endif

  return color;
}

