  //setup
  float p = RENODX_PEAK_BRIGHTNESS / RENODX_GAME_BRIGHTNESS; // Peak (nits)
  float s = RENODX_SHOULDER_START / RENODX_GAME_BRIGHTNESS; //shoulder start

